{
  "name": "piper",
  "version": "0.1.0",
  "description": "node service boilerplate",
  "main": "dist",
  "engines": {
    "node": ">=10.x"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/web/server.js",
    "dev": "nodemon -e ts --exec -e ts --exec 'ts-node --files ./src/web/server.ts'",
    "prebuild": "npm run lint",
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_ENV=test jest --runInBand --verbose --color --coverage --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --runInBand --verbose --color --coverage --detectOpenHandles --watchAll --forceExit",
    "routes": "ts-node ./scripts/list-routes.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:konfortes/node-boilerplate.git"
  },
  "keywords": [
    "api",
    "fastify",
    "rest",
    "typescript"
  ],
  "author": "Ronen Konfortes <konfortes@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "async-local-storage": "^2.1.0",
    "convict": "^4.4.1",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "fastify": "^2.0.0-rc.4",
    "fastify-formbody": "^3.1.0",
    "fastify-swagger": "^2.2.0",
    "http-status-codes": "^1.3.0",
    "hyperid": "^2.0.2",
    "is-plain-object": "^2.0.4",
    "pino": "^5.11.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/pino": "^5.8.4",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.1.0",
    "@typescript-eslint/parser": "^1.1.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "nodemon": "^1.18.9",
    "pino-pretty": "^2.5.0",
    "prettier": "^1.16.2",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}