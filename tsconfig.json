{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noLib": false,
    "outDir": "dist",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
